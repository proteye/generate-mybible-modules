{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "build",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "preserve"
  },
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
